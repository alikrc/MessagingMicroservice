@model RegisterViewModel

<div class="login-page">

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Create Account</h2>
                </div>

                <div class="card-body">
                    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                        <div class="form-group">
                            <label asp-for="User.Name"></label>
                            <input class="form-control" placeholder="Name" asp-for="User.Name" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="User.LastName"></label>
                            <input class="form-control" placeholder="LastName" asp-for="User.LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="User.UserName"></label>
                            <input class="form-control" placeholder="Username" asp-for="User.UserName" autofocus>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
                        </div>

                        <p>
                            <button class="btn btn-primary" name="button" value="login">Register</button>
                        </p>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>